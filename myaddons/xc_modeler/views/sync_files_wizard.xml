
<odoo>
    <data>
        
        <record model="ir.ui.view" id="xc_modeler.sync_files_wizard_form">
            <field name="name">sync files form</field>
            <field name="model">xc_modeler.sync_files_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="form-group row">
                            <label for="sync_views" class="col-sm-2 col-form-label">sync_views</label>
                            <div class="col-sm-10">
                                <field name="sync_views" string="sync views"/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="sync_manifest" class="col-sm-2 col-form-label">sync_manifest</label>
                            <div class="col-sm-10">
                                <field name="sync_manifest" string="sync manifest"/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="arrange_files" class="col-sm-2 col-form-label">arrange_files</label>
                            <div class="col-sm-10">
                                <field name="arrange_files" string="arrange files"/>
                            </div>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="xc_modeler.sync_files_wizard_act_window">
            <field name="name">Sync Files</field>
            <field name="res_model">xc_modeler.sync_files_wizard</field>
            <field name="view_mode">tree,form</field>
        </record>
              
    </data>
</odoo>