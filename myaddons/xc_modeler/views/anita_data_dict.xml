<odoo>
    <data>

        <record model="ir.ui.view" id="xc_modeler.data_dict_list">
            <field name="name">data_dict list </field>
            <field name="model">xc_modeler.data_dict</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="type"/>
                    <field name="name"/>
                    <field name="remark"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="xc_modeler.data_dict_form">
            <field name="name">data_dict form </field>
            <field name="model">xc_modeler.data_dict</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label for="type" class="col-sm-2 col-form-label">type</label>
                        <div class="col-sm-10">
                            <field name="type"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="name" class="col-sm-2 col-form-label">name</label>
                        <div class="col-sm-10">
                            <field name="name"/>
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <label for="remark" class="col-sm-2 col-form-label">remark</label>
                        <div class="col-sm-10">
                            <field name="remark"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="xc_modeler.data_dict_act_window">
            <field name="name">data_dict</field>
            <field name="res_model">xc_modeler.data_dict</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
    