
<odoo>
    <data>

        <record model="ir.ui.view" id="xc_modeler.selection_list">
            <field name="name">xc_modeler.selection list </field>
            <field name="model">xc_modeler.selection</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="key" string="key"/>
                    <field name="val" string="val"/>
                    <field name="owner" string="owner"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="xc_modeler.selection_form">
            <field name="name">xc_modeler.selection form </field>
            <field name="model">xc_modeler.selection</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label for="key" class="col-sm-2 col-form-label">key</label>
                        <div class="col-sm-10">
                            <field name="key" string="key"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="val" class="col-sm-2 col-form-label">val</label>
                        <div class="col-sm-10">
                            <field name="val" string="val"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="owner" class="col-sm-2 col-form-label">owner</label>
                        <div class="col-sm-10">
                            <field name="owner" string="owner"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="xc_modeler.selection_act_window">
            <field name="name">Selections</field>
            <field name="res_model">xc_modeler.selection</field>
            <field name="view_mode">tree,form</field>
        </record>
        
    </data>
</odoo>